{{> html_head }}
   <li>
    <div id="news">
    {{#news}}
        <div class="news">
            <div class="icon"><img src='{{themeUrl}}images/news.png' width="72" height="72" alt='thumbnail'/></div>
            <div class="title">{{title}}</div>
            <div class="date">{{date}}</div>
            <div class="body">{{{body}}}</div>
        </div>
    {{/news}}
    </div>
    {{#pages.0}}
    <div class="news_pages"><span>Page: </span>
    {{#pages}}    
        {{#isCurrentPage}}
            {{pageNumber}}&nbsp;
        {{/isCurrentPage}}
        {{^isCurrentPage}}
            <a href="?news=1&amp;page={{pageNumber}}">{{pageNumber}}</a>&nbsp;
        {{/isCurrentPage}}    
    {{/pages}}
    {{/pages.0}}
    </div>
   </li>
{{> html_tail }}
